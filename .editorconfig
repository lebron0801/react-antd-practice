# editorconfig.org
root = true

# 说明 此插件是为了抹平不同IDE的代码格式差异
## 设置文件编码为 UTF-8；
## 用两个空格代替制表符；
## 每行最大字符数 80；
## 在保存时删除尾部的空白字符；
## 在文件结尾添加一个空白行；
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
max_line_length = 80
insert_final_newline = false
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false